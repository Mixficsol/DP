#include <iostream>
#include <cmath>
using namespace std;

int a[1010][1010];
int b[1010][1010];
int main(int argc, char *argv[]){
	int n;
	cin >> n;
	for (int i = 1; i <= n; i++) {
		for (int j = 1; j <= i; j++) {
			cin >> a[i][j];
			b[i][j] = a[i][j];
		}
	}
	for (int i = n - 1; i >= 1; i--) {
		for (int j = 1; j <= i; j++) {
			b[i][j] = max(b[i + 1][j], b[i + 1][j + 1]) + a[i][j];
		}
	}
	cout << b[1][1] << endl;
	return 0;
}
